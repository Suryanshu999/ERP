# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server port (defaults to 5000 if not set)
PORT=5000

# MongoDB connection URI (optional - app runs with in-memory sample data if not set)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/erp?retryWrites=true&w=majority

# JWT secret for token signing
JWT_SECRET=your-secret-key-here

# Default admin password
DEFAULT_ADMIN_PWD=admin123

# CORS allowed origins (for production on Render, set to your frontend URL)
# CORS_ORIGIN=https://your-frontend-domain.onrender.com
